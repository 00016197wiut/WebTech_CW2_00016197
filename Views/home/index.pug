include ../head.pug
body
    .container.mt-5
        h1 List
        table.table.table-responsive.table-hover.table-striped.table-dark
            thead
                tr
                    th(scope="col") ID
                    th(scope="col") Task Name
                    th(scope="col") Task Deadline
                    th(scope="col") Branch
                    th(scope="col") Contact Phone
                    th(scope="col") Task Owner
                    th(scope="col") Actions
            tbody
script.
    document.addEventListener('DOMContentLoaded', function() {
        axios.get('/api/tasks')
            .then(function(response) {
                const tasks = response.data;
                const tableBody = document.querySelector('table tbody');
                tasks.forEach(t => {
                    const row = document.createElement('tr');
                    const tasks = t.tasks
                    row.innerHTML = `
                        <td>${t.id}</td>
                        <td>${tasks.eventName}</td>
                        <td>${tasks.eventDateTime}</td>
                        <td>${tasks.venue}</td>
                        <td>${tasks.contactPhone}</td>
                        <td>${tasks.seat}</td>
                        <td>
                            <button class="btn btn-primary btn-sm">Edit</button>
                            <button class="btn btn-danger btn-sm" data-id="${t.id}">Delete</button>
                        </td>
                    `;
                    tableBody.appendChild(row);
                });
            })
            .catch(function(error) {
                console.log(error);
            });

            // Use event delegation for delete buttons
            document.addEventListener('click', function(event) {
                if (event.target && event.target.classList.contains('btn-danger')) {
                    const tasksId = event.target.getAttribute('data-id');
                    axios.delete(`/api/tasks/${tasksId}`).then(function(response) {
                        console.log('Delete successful', response);
                        location.href = '/'
                    })
                    .catch(function(error) {
                        console.log('Error deleting tasks', error);
                    });
                }
            });
    });